<?php $__env->startSection('content'); ?>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Role</th>
            <th colspan="2"><a href="<?php echo e(URL::route('users.create')); ?>" class="btn btn-primary btn-block">Create</a></th>
        </tr>
        </thead>
        <tbody>
        <?php foreach($users as $user): ?>
            <tr>
                <td><?php echo e($user->id); ?></td>
                <td><?php echo e($user->email); ?></td>
                <td>
                    <?php foreach($user->roles as $role): ?>
                        <span class="label label-info"><?php echo e($role->name); ?></span>
                    <?php endforeach; ?>
                </td>
                <td width="80"><a class="btn btn-primary" href="<?php echo e(URL::route('users.edit', $user->id)); ?>">Edit</a></td>
                <td width="80"><?php echo Form::open(['route' => ['users.update', $user->id], 'method' => 'DELETE']); ?>

                        <?php echo Form::submit('Delete', ['class' => 'btn btn-danger', 'onclick' => 'return confirm("Are you sure?");']); ?>

                    <?php echo Form::close(); ?></td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>

    <?php echo $users->render(); ?>


<?php $__env->stopSection(); ?>
<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>